{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <main class="contact">
        <h1 class="contact__title">Me contacter</h1>
        <div class="contact__form">
            {{ form_start(form) }}
            {{ form_row(form.object) }}
            {{ form_row(form.email) }}
            {{ form_row(form.message) }}
            <button class="contact__form__button">Envoyer</button>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
